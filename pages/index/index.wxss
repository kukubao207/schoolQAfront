/**index.wxss**/

.container {
  height: 1500rpx;
}

.container .search {
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #f95f5f;
}

.container .search-left {
  flex: 8;
  background: #f37f7f;
  text-align: left;
}

.container .search-left input {
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}

.search-placeholder {
  color: white;
  line-height: 20rpx;
}

.container .search .search-left image {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}

.container .search .search-right {
  flex: 1;
  width: 80rpx;
  text-align: center;
}

.container .search .search-right image {
  width: 50rpx;
  height: 50rpx;
  padding: 5rpx;
  display: inline-block;
}

