<!--pages/personalInfo/personalInfo.wxml-->
<view class='content'>
  <view class='nav'>
    <view class='top'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
  </view>
  <view class='item'>
    <text class='left'>姓名：</text>
    <text class='right'>{{userInfo.nickName}}</text>
  </view>
  <view class='item'>
    <text class='left'>性别：</text>
    <text class='right' wx:if="{{userInfo.gender}}">男</text>
    <text class='right' wx:else>女</text>
  </view>
  <view class='item'>
    <text class='left'>位置：</text>
    <text class='right'>{{userInfo.province}}，{{userInfo.country}}</text>
  </view>
  <view>
    <text>个人简介</text>
    <view style="border: 1px solid #FFA6A6; border-radius: 10px;">

      <textarea placeholder-class="place-holder" maxlength='300' bindinput='limit' maxlength='{{maxWord}}' value="{{text}}" style="font-size: 14px;" />

      <view class="clear">
        <text style="color: #ccc; font-size: 14px; float: right; margin-right: 2%;">{{curWord}} / {{maxWord}} （最多可写50字）</text>
      </view>
    </view>
  </view>


</view>