  position: fixed;
  bottom: 5%;
  margin: 0 10%;
  width: 80%;
}

.personal {
  font-size: 35rpx;
  margin: 0 8% 0% 8%;
  padding: 2% 0 2% 2%;
  background-color: white;
  width: 80%;
  height: 250rpx;
  border: 5rpx solid #fac3cc;
  border-radius: 10rpx;
}

