.unread {
  color: #9a9c9b;
  height: 60rpx;
  padding: 10rpx 40rpx;
  text-align: left;
  width: 670rpx;
}

.unread text {
  display: inline-block;
  line-height: 60rpx;
  font-size: 22rpx;
}

.unread image {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  float: right;
}

.notify-item {
  width: 680rpx;
  background: #fff;
  padding: 25rpx 70rpx 25rpx 0;
  border-bottom: solid 1px #ebebeb;
}

.notify-item  image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.notify-item .avatar {
  flex: 1;
}

.notify-item .notify-content {
  flex: 4;
  text-align: left;
}

.notify-item .notify-content text {
  display: block;
}

.notify-item .notify-content .notify-source {
  color: #818a8f;
  font-size: 28rpx;
  padding: 0 0 8rpx 0;
}

.notify-item .notify-content .notify-comment,
.notify-item .notify-content .notify-answer {
  color: #818a8f;
  font-size: 24rpx;
  padding: 8rpx 0 8rpx 0;
  max-width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.notify-item .notify-content .notify-comment text,
.notify-item .notify-content .notify-answer text {
  /* color: rgb(85, 82, 82); */
  font-weight: bolder;
  display: inline-block;
}

.notify-item .notify-content .notify-title {
  color: #afafaf;
  font-size: 30rpx;
  line-height: 34rpx;
  max-width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* 文本最多一行，否则胜率号码 *//* overflow: hidden; *//* text-overflow: ellipsis; *//* white-space: nowrap; */
}

.notify-item .notify-content .notify-createDate {
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 20rpx;
  color: #bbb9b9;
}

.placehold {
  padding: 80rpx 0;
  font-size: 28rpx;
}

.toptab.flex-item {
  background: #f95f5f;
  color: white;
}

.toptab.flex-item.active {
  background: #f37f7f;
  font-size: larger;
}
